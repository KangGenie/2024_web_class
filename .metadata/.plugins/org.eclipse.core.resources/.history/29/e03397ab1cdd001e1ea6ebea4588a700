<script>
function check(){
	//alert("이건 알람입니다.");
	let frm = document.frm;
	//alert(frm);
	let gender = frm.gender;
	//alert(gender.length);
	
	//alert(gender[0].checked);
	//alert(gender[1].checked);
	//alert(gender[2].checked);
	
	let flag=false;
	for(let i=0; i<gender.length; i++){
		if(gender[i].checked){
			flag=true;
			break;
		}
	}
	
	if(flag == false){
		alert("선택");
	}else{
		//true
		frm.submit();
		
	}
	
	
}

</script>
